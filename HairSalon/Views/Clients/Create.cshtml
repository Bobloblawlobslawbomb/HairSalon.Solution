@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h4>Add a new client</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { @class="form-control", @required="required"})

  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")

  @if (Enumerable.Count(ViewBag.StylistId) == 0)
  {
    <h3>No Stylists have been added yet, Claire. Please add a stylist to associate them with this client!</h3>
  }
  else
  {
    <input type="submit" value="Add new client" class="btn btn-default" />
  }
}
<p>@Html.ActionLink("Show all clients", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>