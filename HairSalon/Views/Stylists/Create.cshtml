@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h4>Add a new stylist</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { @class="form-control", @required="required"})
  <br>
  @Html.LabelFor(model => model.Speciality)
  @Html.TextBoxFor(model => model.Speciality, new { @class="form-control", @required="required"})
  <br>
  @Html.LabelFor(model => model.Hired)
  @Html.TextBoxFor(model => model.Hired, new { @class="form-control", @required="required", type="date"})
  <br>

  <input type="submit" value="Add new stylist" />
}
<p>@Html.ActionLink("Show all Stylists", "Index")</p>